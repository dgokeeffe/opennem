{
    "$schema": "https://mintlify.com/docs.json",
    "theme": "mint",
    "name": "OpenElectricity Documentation",
    "colors": {
        "primary": "#8b3119",
        "light": "#9b3f23",
        "dark": "#7b2315"
    },
    "favicon": "/images/favicon/favicon.svg",
    "navigation": {
        "tabs": [
            {
                "tab": "Documentation",
                "groups": [
                    {
                        "group": "Get Started",
                        "pages": ["introduction"]
                    },
                    {
                        "group": "Guides",
                        "pages": [
                            "guides/networks",
                            "guides/power",
                            "guides/energy",
                            "guides/price",
                            "guides/emissions",
                            "guides/fueltechs",
                            "guides/facilities",
                            "guides/batteries",
                            "guides/weather",
                            "guides/interconnectors"
                        ]
                    },
                    {
                        "group": "Platform",
                        "pages": ["platform/introduction"]
                    }
                ]
            },
            {
                "tab": "API Reference",
                "groups": [
                    {
                        "group": "API Reference",
                        "pages": [
                            "api/overview",
                            {
                                "group": "Generation Data",
                                "pages": [
                                    "api/data/get-network-data",
                                    "api/data/get-facility-data"
                                ]
                            },
                            {
                                "group": "Market Data",
                                "pages": ["api/market/get-network-data"]
                            },
                            {
                                "group": "Facilities",
                                "pages": ["api/facilities/get-facilities"]
                            },
                            {
                                "group": "User",
                                "pages": ["api/user/get-user-me"]
                            }
                        ]
                    }
                ]
            },
            {
                "tab": "SDKs",
                "groups": [
                    {
                        "group": "SDKs",
                        "pages": [
                            "sdk/overview",
                            "sdk/configuration",
                            {
                                "group": "Typescript",
                                "pages": [
                                    "sdk/typescript/overview",
                                    "sdk/typescript/reference",
                                    "sdk/typescript/types",
                                    "sdk/typescript/utilities"
                                ]
                            },
                            {
                                "group": "Python",
                                "pages": ["sdk/python/overview"]
                            }
                        ]
                    }
                ]
            },
            {
                "tab": "Contribute",
                "groups": [
                    {
                        "group": "Contribute",
                        "pages": [
                            "contribute/overview",
                            {
                                "group": "Backend",
                                "pages": [
                                    "contribute/backend/overview",
                                    "contribute/backend/cli"
                                ]
                            }
                        ]
                    }
                ]
            }
        ],
        "global": {
            "anchors": [
                {
                    "anchor": "GitHub",
                    "href": "https://github.com/opennem",
                    "icon": "github"
                },
                {
                    "anchor": "Website",
                    "href": "https://explore.openelectricity.org.au/",
                    "icon": "link"
                }
            ]
        }
    },
    "logo": {
        "light": "/images/oe_logo_full_black.png",
        "dark": "/images/oe_logo_full_white.png"
    },
    "api": {
        "openapi": "https://api.openelectricity.org.au/v4/openapi.json",
        "mdx": {
            "server": "https://api.openelectricity.org.au/v4",
            "auth": {
                "method": "bearer"
            }
        }
    },
    "navbar": {
        "links": [
            {
                "label": "Tracker",
                "href": "https://explore.openelectricity.org.au"
            },
            {
                "label": "GitHub",
                "href": "https://github.com/opennem/opennem"
            },
            {
                "label": "Blog",
                "href": "https://openelectricity.org.au/analysis"
            }
        ],
        "primary": {
            "type": "button",
            "label": "Platform",
            "href": "https://platform.openelectricity.org.au"
        }
    },
    "footer": {
        "socials": {
            "x": "https://x.com/opennem",
            "github": "https://github.com/opennem/opennem"
        }
    },
    "fonts": {
        "heading": {
            "family": "DM Sans, sans-serif",
            "weight": 400
        },
        "body": {
            "family": "DM Sans, sans-serif",
            "weight": 400
        }
    }
}
